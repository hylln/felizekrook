---
import Layout from "../layouts/Layout.astro";
---

<Layout title="GALLERY">
    <header class="hero">
        <a href="/" class="logo-link">
            <h1>FELIZE KROOK</h1>
        </a>
        <nav class="header-nav">
            <a href="/gallery">GALLERY</a>
            <a href="/about">ABOUT</a>
            <a href="/contact">CONTACT</a>
        </nav>
    </header>

    <main class="contact-grid">
        <nav class="sub-nav">
            <a href="/" class="back-link">BACK</a>
        </nav>

        <section class="thumbnail-grid">
            <div class="thumb-card">
                <img src="/2.jpeg" alt="Project 01" class="zoom-img" />
                <div class="thumb-details">01</div>
            </div>
            <div class="thumb-card">
                <img src="/1.jpeg" alt="Project 02" class="zoom-img" />
                <div class="thumb-details">02</div>
            </div>
            <div class="thumb-card">
                <img src="/4.jpeg" alt="Project 03" class="zoom-img" />
                <div class="thumb-details">03</div>
            </div>
            <div class="thumb-card">
                <img src="/5.jpeg" alt="Project 04" class="zoom-img" />
                <div class="thumb-details">04</div>
            </div>
            <div class="thumb-card">
                <img src="/6.jpeg" alt="Project 05" class="zoom-img" />
                <div class="thumb-details">05</div>
            </div>
            <div class="thumb-card">
                <img src="/3.jpeg" alt="Project 06" class="zoom-img" />
                <div class="thumb-details">06</div>
            </div>
        </section>
    </main>

    <div id="lightbox" class="lightbox">
        <span class="close-lightbox" id="close-btn">&times;</span>

        <div class="nav-zone left" id="prev-zone">
            <div class="lightbox-arrow-container prev-arrow">
                <svg viewBox="0 0 100 20" preserveAspectRatio="none">
                    <line
                        x1="100"
                        y1="10"
                        x2="0"
                        y2="10"
                        stroke="black"
                        stroke-width="1.6"></line>
                    <polyline
                        points="4,4 0,10 4,16"
                        fill="none"
                        stroke="black"
                        stroke-width="1.6"></polyline>
                </svg>
            </div>
        </div>

        <div class="nav-zone right" id="next-zone">
            <div class="lightbox-arrow-container next-arrow">
                <svg viewBox="0 0 100 20" preserveAspectRatio="none">
                    <line
                        x1="0"
                        y1="10"
                        x2="100"
                        y2="10"
                        stroke="black"
                        stroke-width="1.6"></line>
                    <polyline
                        points="96,4 100,10 96,16"
                        fill="none"
                        stroke="black"
                        stroke-width="1.6"></polyline>
                </svg>
            </div>
        </div>

        <div class="lightbox-content-wrapper" id="lightbox-wrapper">
            <img
                class="lightbox-content"
                id="lightbox-img"
                alt="Fullscreen View"
            />
        </div>
    </div>
</Layout>

<style>
    :global(html) {
        scrollbar-gutter: stable;
    }

    /* --- HERO BAR --- */
    .hero {
        text-align: center;
        position: sticky;
        top: 0;
        z-index: 100;
        background-color: #ffffff;
        padding: 2rem 2rem;
        border-bottom: 1px solid rgba(0, 0, 0, 0.2);
        display: flex;
        justify-content: center;
        align-items: center;
        box-sizing: border-box;
    }

    .logo-link {
        text-decoration: none;
        color: inherit;
        display: inline-block;
        transition: opacity 0.3s ease;
    }

    .logo-link:hover {
        opacity: 0.7;
    }

    h1 {
        font-size: clamp(1rem, 2vw, 12rem);
        line-height: 0.85;
        letter-spacing: -0.05em;
        text-transform: uppercase;
        margin: 0;
        color: #000;
    }

    .header-nav {
        position: absolute;
        right: 2rem;
        display: flex;
        gap: 1.5rem;
    }

    .header-nav a {
        font-size: 0.7rem;
        text-decoration: none;
        color: #000;
        letter-spacing: 0.05em;
        text-transform: uppercase;
        transition: opacity 0.3s ease;
    }

    .header-nav a:hover {
        opacity: 0.6;
    }

    /* --- GRID STRUCTURE --- */
    .contact-grid {
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        padding: 3vh 2rem 0 2rem;
        overflow-x: hidden;
    }

    .sub-nav {
        grid-column: 1 / span 12;
        display: flex;
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .back-link {
        font-size: 0.7rem;
        text-decoration: none;
        color: #000;
        letter-spacing: 0.05em;
        text-transform: uppercase;
        transition: opacity 0.3s ease;
    }

    .back-link:hover {
        opacity: 0.6;
    }

    .thumbnail-grid {
        grid-column: 1 / span 12;
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-auto-rows: 10px;
        gap: 0 1.5rem;
        width: 100%;
        padding-bottom: 5vh;
        align-items: start;
        box-sizing: border-box;
    }

    .thumb-card {
        opacity: 0;
        transform: translateY(30px);
        transition:
            opacity 1.2s cubic-bezier(0.16, 1, 0.3, 1),
            transform 1.2s cubic-bezier(0.16, 1, 0.3, 1);
        margin-bottom: 2rem;
    }

    .thumb-card.reveal-visible {
        opacity: 1;
        transform: translateY(0);
    }

    .thumb-card img {
        width: 100%;
        cursor: zoom-in;
        transition: transform 0.5s ease;
    }

    .thumb-card img:hover {
        transform: scale(1.025);
    }

    .thumb-details {
        margin-top: 0.5rem;
        font-size: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }

    /* --- LIGHTBOX --- */
    .lightbox {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 2000;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: rgba(255, 255, 255, 0.6);
        backdrop-filter: blur(2px);
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.6s ease;
        touch-action: none;
        -webkit-tap-highlight-color: transparent;
    }

    .lightbox.show {
        opacity: 1;
        visibility: visible;
    }

    .close-lightbox {
        position: absolute;
        top: 2rem;
        right: 2rem;
        font-size: 2.5rem;
        z-index: 3000;
        cursor: pointer;
    }

    .nav-zone {
        position: absolute;
        top: 0;
        height: 100%;
        width: 30%;
        z-index: 2010;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition:
            opacity 0.2s ease,
            visibility 0.2s ease;
    }

    .nav-zone.hiding {
        opacity: 0 !important;
        visibility: hidden;
        pointer-events: none;
    }

    .nav-zone.left {
        left: 0;
    }
    .nav-zone.right {
        right: 0;
    }

    .lightbox-arrow-container {
        width: 80px;
        opacity: 1;
        transition: opacity 0.3s;
    }

    .nav-zone:hover .lightbox-arrow-container {
        opacity: 0.6;
    }

    .lightbox-content-wrapper {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        will-change: transform, opacity;
        transition:
            transform 0.4s cubic-bezier(0.165, 0.84, 0.44, 1),
            opacity 0.3s ease;
    }

    .lightbox-content-wrapper.dragging {
        transition: none !important;
    }

    .lightbox-content {
        max-width: 85%;
        max-height: 80vh;
        object-fit: contain;
        user-select: none;
        pointer-events: auto;
        transform-origin: center center;
    }

    .slide-out-left {
        transform: translate3d(-100%, 0, 0) !important;
        opacity: 0 !important;
    }

    .slide-out-right {
        transform: translate3d(100%, 0, 0) !important;
        opacity: 0 !important;
    }

    @media (max-width: 900px) {
        .hero {
            padding: 1.5rem 1rem;
            flex-direction: column;
            gap: 1rem;
            height: auto;
        }
        h1 {
            font-size: 1.4rem;
            width: 100%;
            text-align: center;
        }
        .header-nav {
            position: static;
            justify-content: center;
            gap: 2rem;
            width: 100%;
        }
        .thumbnail-grid {
            grid-template-columns: repeat(2, 1fr);
        }
        .nav-zone {
            display: none;
        }
    }
</style>

<script>
    function resizeMasonryItem(item: HTMLElement) {
        const grid = document.querySelector(".thumbnail-grid") as HTMLElement;
        if (!grid) return;
        const rowHeight = 10;
        const img = item.querySelector("img");
        const details = item.querySelector(".thumb-details");
        if (img && details) {
            const totalHeight =
                img.getBoundingClientRect().height +
                details.getBoundingClientRect().height +
                15;
            item.style.gridRowEnd = `span ${Math.ceil(totalHeight / rowHeight)}`;
        }
    }

    const revealObserver = new IntersectionObserver(
        (entries) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    entry.target.classList.add("reveal-visible");
                    revealObserver.unobserve(entry.target);
                }
            });
        },
        { threshold: 0.1 },
    );

    const lightbox = document.getElementById("lightbox");
    const lightboxImg = document.getElementById(
        "lightbox-img",
    ) as HTMLImageElement;
    const lightboxWrapper = document.getElementById("lightbox-wrapper");
    const thumbImgs = document.querySelectorAll(
        ".zoom-img",
    ) as NodeListOf<HTMLImageElement>;
    const closeBtn = document.getElementById("close-btn");
    const prevZone = document.getElementById("prev-zone");
    const nextZone = document.getElementById("next-zone");

    let currentIndex = 0;
    const imgList = Array.from(thumbImgs).map((img) => img.src);
    let isAnimating = false;

    // Interaction Variables
    let startX = 0;
    let currentX = 0;
    let isDragging = false;
    let initialPinchDistance = 0;
    let isPinching = false;

    // Double Tap Variables
    let lastTapTime = 0;
    let isDoubleTapZoomed = false;

    function getDistance(touches: TouchList) {
        const dx = touches[0].clientX - touches[1].clientX;
        const dy = touches[0].clientY - touches[1].clientY;
        return Math.sqrt(dx * dx + dy * dy);
    }

    function getPinchCenter(touches: TouchList, element: HTMLElement) {
        const rect = element.getBoundingClientRect();
        const centerX = (touches[0].clientX + touches[1].clientX) / 2;
        const centerY = (touches[0].clientY + touches[1].clientY) / 2;
        const xPercent = ((centerX - rect.left) / rect.width) * 100;
        const yPercent = ((centerY - rect.top) / rect.height) * 100;
        return `${xPercent}% ${yPercent}%`;
    }

    function getSingleTapCenter(touch: Touch, element: HTMLElement) {
        const rect = element.getBoundingClientRect();
        const xPercent = ((touch.clientX - rect.left) / rect.width) * 100;
        const yPercent = ((touch.clientY - rect.top) / rect.height) * 100;
        return `${xPercent}% ${yPercent}%`;
    }

    function updateImage(index: number, direction: "left" | "right") {
        if (!lightboxWrapper || !lightboxImg || isAnimating) return;
        isAnimating = true;

        prevZone?.classList.add("hiding");
        nextZone?.classList.add("hiding");

        const outClass =
            direction === "right" ? "slide-out-left" : "slide-out-right";
        lightboxWrapper.classList.add(outClass);

        setTimeout(() => {
            currentIndex = index;
            lightboxWrapper.style.transition = "none";
            lightboxWrapper.style.opacity = "0";
            lightboxWrapper.style.transform =
                direction === "right"
                    ? "translate3d(100%, 0, 0)"
                    : "translate3d(-100%, 0, 0)";

            lightboxImg.src = imgList[currentIndex];
            lightboxImg.style.transform = "scale(1)";
            lightboxImg.style.transformOrigin = "center center";
            isDoubleTapZoomed = false;

            lightboxWrapper.classList.remove(outClass);

            requestAnimationFrame(() => {
                requestAnimationFrame(() => {
                    lightboxWrapper.style.transition = "";
                    lightboxWrapper.style.opacity = "1";
                    lightboxWrapper.style.transform = "translate3d(0, 0, 0)";

                    setTimeout(() => {
                        isAnimating = false;
                        prevZone?.classList.remove("hiding");
                        nextZone?.classList.remove("hiding");
                    }, 400);
                });
            });
        }, 350);
    }

    if (lightbox && lightboxWrapper && lightboxImg) {
        thumbImgs.forEach((img, i) =>
            img.addEventListener("click", () => {
                currentIndex = i;
                lightboxImg.src = imgList[currentIndex];
                lightboxImg.style.transform = "scale(1)";
                lightboxImg.style.transformOrigin = "center center";
                isDoubleTapZoomed = false;
                lightbox.classList.add("show");
                document.body.style.overflow = "hidden";
            }),
        );

        closeBtn?.addEventListener("click", () => {
            lightbox.classList.remove("show");
            document.body.style.overflow = "auto";
        });

        // Touch Interaction Handling
        lightbox.addEventListener(
            "touchstart",
            (e) => {
                if (isAnimating) return;

                // Double Tap Detection
                if (e.touches.length === 1) {
                    const now = Date.now();
                    const timesince = now - lastTapTime;

                    if (timesince < 300 && timesince > 0) {
                        e.preventDefault();
                        if (!isDoubleTapZoomed) {
                            lightboxImg.style.transformOrigin =
                                getSingleTapCenter(e.touches[0], lightboxImg);
                            lightboxImg.style.transition =
                                "transform 0.3s ease";
                            lightboxImg.style.transform = "scale(2.5)";
                            isDoubleTapZoomed = true;
                        } else {
                            lightboxImg.style.transition =
                                "transform 0.3s ease";
                            lightboxImg.style.transform = "scale(1)";
                            isDoubleTapZoomed = false;
                        }
                        isDragging = false;
                        return;
                    }
                    lastTapTime = now;
                }

                // Pinch and Swipe Setup
                if (e.touches.length === 2) {
                    isPinching = true;
                    isDragging = false;
                    initialPinchDistance = getDistance(e.touches);
                    lightboxImg.style.transformOrigin = getPinchCenter(
                        e.touches,
                        lightboxImg,
                    );
                } else if (e.touches.length === 1 && !isDoubleTapZoomed) {
                    startX = e.touches[0].clientX;
                    currentX = startX;
                    isDragging = true;
                    lightboxWrapper.classList.add("dragging");
                }
            },
            { passive: false },
        );

        lightbox.addEventListener(
            "touchmove",
            (e) => {
                if (isPinching && e.touches.length === 2) {
                    e.preventDefault();
                    const currentDistance = getDistance(e.touches);
                    const scale = currentDistance / initialPinchDistance;
                    lightboxImg.style.transform = `scale(${scale})`;
                    lightboxImg.style.transition = "none";
                } else if (isDragging && !isPinching) {
                    currentX = e.touches[0].clientX;
                    const diff = currentX - startX;
                    lightboxWrapper.style.transform = `translate3d(${diff}px, 0, 0)`;
                    lightboxWrapper.style.opacity = Math.max(
                        0.5,
                        1 - Math.abs(diff) / window.innerWidth,
                    ).toString();
                }
            },
            { passive: false },
        );

        lightbox.addEventListener("touchend", (e) => {
            if (isPinching && e.touches.length < 2) {
                isPinching = false;
                lightboxImg.style.transition =
                    "transform 0.3s ease, transform-origin 0.3s ease";
                lightboxImg.style.transform = "scale(1)";
                isDoubleTapZoomed = false;
                setTimeout(() => {
                    lightboxImg.style.transformOrigin = "center center";
                }, 300);
            }

            if (isDragging) {
                isDragging = false;
                lightboxWrapper.classList.remove("dragging");
                const diff = currentX - startX;
                const threshold = window.innerWidth * 0.2;

                if (diff < -threshold) {
                    updateImage((currentIndex + 1) % imgList.length, "right");
                } else if (diff > threshold) {
                    updateImage(
                        (currentIndex - 1 + imgList.length) % imgList.length,
                        "left",
                    );
                } else {
                    lightboxWrapper.style.transform = "translate3d(0, 0, 0)";
                    lightboxWrapper.style.opacity = "1";
                }
            }
            startX = 0;
            currentX = 0;
        });

        lightbox.addEventListener("click", (e) => {
            if (e.target === lightbox) {
                lightbox.classList.remove("show");
                document.body.style.overflow = "auto";
            }
        });

        window.addEventListener("keydown", (e) => {
            if (!lightbox.classList.contains("show")) return;
            if (e.key === "ArrowRight")
                updateImage((currentIndex + 1) % imgList.length, "right");
            else if (e.key === "ArrowLeft")
                updateImage(
                    (currentIndex - 1 + imgList.length) % imgList.length,
                    "left",
                );
            else if (e.key === "Escape") {
                lightbox.classList.remove("show");
                document.body.style.overflow = "auto";
            }
        });
    }

    window.addEventListener("load", () => {
        document
            .querySelectorAll(".thumb-card")
            .forEach((c) => resizeMasonryItem(c as HTMLElement));
        document
            .querySelectorAll(".thumb-card")
            .forEach((c) => revealObserver.observe(c));
    });
    window.addEventListener("resize", () => {
        document
            .querySelectorAll(".thumb-card")
            .forEach((c) => resizeMasonryItem(c as HTMLElement));
    });
</script>
